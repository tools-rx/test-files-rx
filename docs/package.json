{
  "name": "test-files-rx",
  "version": "1.0.0-beta.1",
  "description": "Tools for building directories, files, and symbolic links for creating test scenarios.",
  "main": "dist/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "test": "babel-node scripts/run-tests",
    "build": "npm-run-all lint test clean build:js build:docs",
    "build:js": "babel --out-dir dist src",
    "build:docs": "esdoc -c esdoc.json",
    "lint": "standard",
    "clean": "rimraf dist"
  },
  "keywords": [
    "glob",
    "rx"
  ],
  "author": "Dave F. Baskin <dfbaskin@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tools-rx/test-files-rx.git"
  },
  "standard": {
    "ignore": [
      "docs/"
    ]
  },
  "dependencies": {
    "rxjs": "^5.0.0-beta.11"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "esdoc": "^0.4.8",
    "jasmine": "^2.4.1",
    "jasmine-spec-reporter": "^2.4.0",
    "lodash": "^4.7.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^2.3.0",
    "rimraf": "^2.5.2",
    "standard": "^7.1.2"
  }
}
